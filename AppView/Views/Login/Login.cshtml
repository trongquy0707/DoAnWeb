@model AppData.Models.User;
@{
    Layout = null;
}



<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/khachhang/cauhieu/login.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
    <title>Đăng Nhập</title>
</head>
<body>
    <div class="wrapper">
        <form asp-action="Login" method="post">
            <h1>Đăng Nhập</h1>
            <div class="input-box">
                <input type="text" placeholder="Số Điện Thoại" asp-for="SoDienThoai"  required>
                <i class="fa fa-user" aria-hidden="true"></i>
            </div>
            <div class="input-box">
                <input type="password" placeholder="Mật Khẩu" asp-for="MatKhau" required>
                <i class="fa fa-lock" aria-hidden="true"></i>
            </div>
           
            <div class="button">
                <button type="submit" class="btn">Đăng Nhập</button>
            </div>
            <div class="register-link">
                <p>Bạn đã có tài khoản chưa ! <a href="~/Admin/NguoiDung/ThemmoiUser">Đăng Ký</a></p>
            </div>
        </form>

    </div>
</body>
</html>


