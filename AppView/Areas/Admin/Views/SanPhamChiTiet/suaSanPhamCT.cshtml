                        </div>
                        <div class="form-group">
                            <label asp-for="Anh" class="control-label">Ảnh</label>
                            @Html.TextBoxFor(m => m.Anh, new { type = "file", @class = "form-control" })
                            @Html.ValidationMessageFor(Model => Model.Anh, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <label asp-for="GiaSp" class="control-label">Giá</label>
